@model WebAppEmployeesV2.Models.Salary

@{
    ViewBag.Title = "Salary";
}

<h2>Estimate Salary</h2>

@using (Html.BeginForm("EstimateSalaryView", "Salary", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Salary</h4>
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", Name = "Id" } })
            @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Info from API" class="btn btn-default" name="getInfofromAPI" />
            <input type="submit" value="Info from DB" class="btn btn-default" name="getInfofromDB" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "EstimateSalaryView")
</div>
